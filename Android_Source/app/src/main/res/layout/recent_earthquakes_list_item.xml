<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    tools:context=".UserInterface.Fragments.RecentEarthquakes_ListFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="27dp"
                android:layout_height="28dp"
                android:layout_margin="15dp"
                android:src="@mipmap/location" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:layout_toStartOf="@+id/arrow"
                android:layout_toEndOf="@+id/image"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_semibold"
                    android:text="587 Palm Drive Canyon"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Expect severe shaking, Drop, cover, hold something"
                    android:textColor="@color/grey_400"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/location"
                    android:drawablePadding="7dp"
                    android:maxLines="1"
                    android:text="6 Miles NE from Aguanga, CA"
                    android:textColor="@color/grey_400"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:orientation="horizontal">-->

                    <TextView
                        android:id="@+id/magnitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/magnitude"
                        android:drawablePadding="7dp"
                        android:text="Magnitude: 6.4"
                        android:textColor="@color/grey_400"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/time_icon"
                        android:drawablePadding="7dp"
                        android:text="Aug, 24th, 11:15PM"
                        android:textColor="@color/grey_400"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                <!--</LinearLayout>-->
            </LinearLayout>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:src="@mipmap/arrow" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>